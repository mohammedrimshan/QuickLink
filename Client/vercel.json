{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.quicklink.rimshan.in/api/:path*"
    },
    {
      "source": "/:shortUrl",
      "destination": "https://api.quicklink.rimshan.in/:shortUrl"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://quicklink.rimshan.in"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
